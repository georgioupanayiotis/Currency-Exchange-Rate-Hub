{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "never"], // Enforce no semicolons
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": ["warn"],
    "no-console": "error",
    "prettier/prettier": ["error", { "semi": false }]
  }
}
